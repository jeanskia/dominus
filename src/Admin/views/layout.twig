  <body class="bg-light">

    <nav class="navbar navbar-expand-md fixed-top navbar-dark bg-dark">
            <a class="navbar-brand" href="{{path('admin')}}">ADMIN</a>
            <button class="navbar-toggler p-0 border-0" type="button" data-toggle="offcanvas">
                <span class="navbar-toggler-icon"> </span>
            </button>

            <div class="navbar-collapse offcanvas-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    {{ main_menu() }}                 
                </ul>
                <div class="navbar-nav ">                    
                    <form class="form-inline " method="post" action="{{ path('auth.logout') }}"> 
                        <span class="navbar-text" >
                        Connecté en tant que | <b> {{ current_user().username }} </b>
                    </span>
                        {{ csrf_input() }}
                        <button class="btn btn-danger my-2 my-sm-0">Se déconnecter</button>
                    </form>                
                </div>
            </div>
    </nav>
                
   {% include '@admin/sub_menu.twig'%} 
   
    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-success rounded box-shadow">
          <img class="mr-3" src="http://ande.intranet/public/assets/images/ande_ci.png" alt="" width="48" height="48">
        <div class="lh-100">
            <h6 class="mb-0 text-white lh-100">A.N.D.E | <small>Agence Nationale De l'Environnement </small></h6>
            <small><em>Guichet Unique National des Evaluations Environnementales, pour l'avènement du Développement Durable en côte d'Ivoire</em></small>
        </div>
        </div>                   
                  {%if flash('succes')%}
                        <div class="alert alert-success">
                            {{ flash('succes') }}
                        </div>
                    {% endif %}
                    {%if flash('error')%}
                        <div class="alert alert-danger">
                            {{ flash('error') }}
                        </div>
                    {% endif %}
                    {% block body %}
                    {% endblock %} 
         
        </main>

